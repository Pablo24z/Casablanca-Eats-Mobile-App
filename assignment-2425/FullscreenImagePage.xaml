<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="assignment_2425.FullscreenImagePage"
             BackgroundColor="#131313"
             NavigationPage.HasNavigationBar="False">

    <Grid>

        <!-- ScrollView allows for pinch-to-zoom in both directions -->
        <ScrollView x:Name="ImageScrollView"
                    Orientation="Both"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand"
                    BackgroundColor="#131313">

            <Grid>
                <!-- Image initially zoomed out slightly for effect -->
                <Image x:Name="FullImage"
                       Aspect="AspectFit"
                       Scale="0.55"
                       HorizontalOptions="FillAndExpand"
                       VerticalOptions="FillAndExpand" />
            </Grid>
        </ScrollView>

        <!-- Close button in top right corner -->
        <ImageButton Source="close_icon.png"
                     BackgroundColor="Transparent"
                     WidthRequest="40"
                     HeightRequest="40"
                     HorizontalOptions="End"
                     VerticalOptions="Start"
                     Margin="10"
                     Clicked="CloseImage"
                     ZIndex="5" />
    </Grid>
</ContentPage>
