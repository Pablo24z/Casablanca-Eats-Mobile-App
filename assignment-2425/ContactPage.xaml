<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:assignment_2425"
             x:Class="assignment_2425.ContactPage">

    <Grid RowDefinitions="Auto,*">

        <!-- Sticky Nav -->
        <local:StickyNavBar />

        <!-- Page Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20">
                <Label Text="Contact Us!"
                       FontSize="28"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />
                <Label Text="Internal Font Name"
           FontFamily="Palanquin Dark Bold"
           FontSize="24"
           TextColor="Lime" />

                <Label Text="Alias Font Name"
           FontFamily="PalanquinBold"
           FontSize="24"
           TextColor="Aqua" />

                <!-- More menu content here -->
            </VerticalStackLayout>
        </ScrollView>

    </Grid>
</ContentPage>
