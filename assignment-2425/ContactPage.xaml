<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:assignment_2425"
             x:Class="assignment_2425.ContactPage"
             BackgroundColor="#131313">

    <Grid RowDefinitions="Auto,*">
        <!-- Sticky Navbar -->
        <local:StickyNavBar Grid.Row="0" />

        <!-- Scrollable Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="30" Padding="20">

                <!-- Header -->
                <Label Text="Get In Touch With us"
                       Style="{StaticResource TitleStyle}"
                       TextColor="#FECA18"
                       FontSize="35"
                       HorizontalTextAlignment="Center"
                       Margin="0,20,0,0"/>

                <Label Text="WE'D LOVE TO HEAR FROM YOU!"
                       Style="{StaticResource TitleStyle}"
                       FontSize="25"
                       HorizontalTextAlignment="Center"
                       Margin="0,20,0,0"/>

                <!-- Contact Form -->
                <VerticalStackLayout Spacing="15">
                    <Entry x:Name="NameEntry"
                           Placeholder="Your Name (optional)"
                           BackgroundColor="#1C1C1C"
                           PlaceholderColor="#AAAAAA"
                           TextColor="White"
                           FontSize="14"
                           TextChanged="OnAnyFieldChanged"/>

                    <Entry x:Name="EmailEntry"
                           Placeholder="Your Email*"
                           BackgroundColor="#1C1C1C"
                           PlaceholderColor="#AAAAAA"
                           TextColor="White"
                           FontSize="14"
                           Keyboard="Email"
                           TextChanged="OnAnyFieldChanged"/>
                    <Label x:Name="EmailErrorLabel"
                           TextColor="Red"
                           FontSize="14"
                           IsVisible="False" />

                    <Editor x:Name="MessageEditor"
                            Placeholder="Your Message (max 500 characters)*"
                            BackgroundColor="#1C1C1C"
                            PlaceholderColor="#AAAAAA"
                            TextColor="White"
                            MaxLength="500"
                            FontSize="14"
                            HeightRequest="120"
                            AutoSize="TextChanges"
                            TextChanged="OnAnyFieldChanged"/>
                    <Label x:Name="MessageErrorLabel"
                           TextColor="Red"
                           FontSize="14"
                           IsVisible="False" />

                    <StackLayout Orientation="Horizontal" Spacing="10" VerticalOptions="Center">
                        <CheckBox x:Name="PrivacyCheckBox" Color="#FECA18" CheckedChanged="OnPrivacyCheckedChanged"/>
                        <Label Text="I agree to the Privacy Policy"
                               VerticalOptions="Center"
                               TextColor="White"
                               FontSize="13"/>
                    </StackLayout>

                    <Button x:Name="SubmitButton"
                            Text="Submit"
                            TextColor="White"
                            BackgroundColor="#FA452D"
                            FontAttributes="Bold"
                            IsEnabled="False"
                            Opacity="0.5"
                            Clicked="OnSubmitClicked"/>
                </VerticalStackLayout>

                <!-- Google Maps Embed -->
                <Frame HasShadow="True"
                       CornerRadius="10"
                       Padding="0"
                       HeightRequest="200"
                       BackgroundColor="White">
                    <WebView HeightRequest="200">
                        <WebView.Source>
                            <HtmlWebViewSource>
                                <HtmlWebViewSource.Html>
                                    <![CDATA[
                                    <html>
                                        <head><meta name='viewport' content='initial-scale=1.0, width=device-width'/></head>
                                        <body style='margin:0;padding:0;'>
                                            <iframe width='100%' height='100%' frameborder='0' style='border:0'
                                                src='https://www.google.com/maps/embed/v1/place?key=AIzaSyBPiIT4Dt-d2v-38X5RNB4JEscIgZFTkgo&q=170+Sandringham+Rd,+London+E8+2HS' allowfullscreen>
                                            </iframe>
                                        </body>
                                    </html>
                                    ]]>
                                </HtmlWebViewSource.Html>
                            </HtmlWebViewSource>
                        </WebView.Source>
                    </WebView>
                </Frame>

                <!-- Divider -->
                <Image Source="dividers/wavesopacitybottom.svg"
                       Aspect="AspectFill"
                       HeightRequest="100"
                       WidthRequest="1000"
                       Rotation="180"
                       HorizontalOptions="FillAndExpand"
                       Margin="0,-20,0,-20"
                       ZIndex="3" />

                <!-- Footer Section -->
                <Grid BackgroundColor="White" Padding="30,20" HorizontalOptions="FillAndExpand">
                    <VerticalStackLayout Spacing="10" HorizontalOptions="FillAndExpand">
                        <Label Text="📍 170 Sandringham Rd, London E8 2HS"
                               TextColor="#131313" FontSize="14" HorizontalTextAlignment="Center" />
                        <Label Text="📞 020 7502 9511"
                               TextColor="#131313" FontSize="14" HorizontalTextAlignment="Center" />
                        <Label Text="📧 casa@casablancaeats.com"
                               TextColor="#131313" FontSize="14" HorizontalTextAlignment="Center" />
                        <Label Text="🕓 Opening Hours"
                               FontAttributes="Bold" FontSize="16"
                               TextColor="#131313" Margin="0,10,0,0" HorizontalTextAlignment="Center" />
                        <Label Text="Monday – Saturday: 7 am – 11 pm"
                               FontSize="14" TextColor="#131313" HorizontalTextAlignment="Center" />
                        <Label Text="Sunday: 10 am – 10 pm"
                               FontSize="14" TextColor="#131313" HorizontalTextAlignment="Center" />
                    </VerticalStackLayout>
                </Grid>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
