<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:assignment_2425.Models"
             x:Class="assignment_2425.DishDetailPage"
             BackgroundColor="#1E1E1E"
             NavigationPage.HasNavigationBar="False">

    <Grid Padding="16">

        <!-- Scrollable content area for dish info -->
        <ScrollView>
            <VerticalStackLayout Spacing="20">

                <!-- Dish Name -->
                <Label Text="{Binding Name}"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="White" />

                <!-- Dish Price -->
                <Label Text="{Binding DisplayPrice}"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="#FECA18" />

                <!-- Dish Description -->
                <Label Text="{Binding Description}"
                       FontSize="16"
                       TextColor="White" />

                <!-- Add to Basket Button -->
                <Button Text="Add to Basket"
                        BackgroundColor="#7ECB37"
                        TextColor="White"
                        CornerRadius="10"
                        Clicked="OnAddToBasketClicked" />

            </VerticalStackLayout>
        </ScrollView>

        <!-- Close Button (top-right corner) -->
        <ImageButton Source="close_icon.png"
                     Clicked="OnCloseClicked"
                     WidthRequest="40"
                     HeightRequest="40"
                     Padding="5"
                     Margin="10"
                     BackgroundColor="Transparent"
                     HorizontalOptions="End"
                     VerticalOptions="Start"
                     IsEnabled="True"
                     InputTransparent="False" />

    </Grid>
</ContentPage>
