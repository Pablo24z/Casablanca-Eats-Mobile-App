<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="assignment_2425.OrderConfirmationPage"
             BackgroundColor="#131313"
             NavigationPage.HasNavigationBar="False"
             NavigationPage.HasBackButton="False">

    <Grid>
        <!-- Confetti background image (GIF) gives celebration feel -->
        <Image Source="confetti.gif"
               Aspect="AspectFill"
               Opacity="0.8"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="FillAndExpand" />

        <!-- Foreground content (thank you message and button) -->
        <VerticalStackLayout Padding="20"
                             Spacing="20"
                             HorizontalOptions="Center"
                             VerticalOptions="CenterAndExpand">

            <!-- Confirmation title -->
            <Label Text="Order Confirmed!" 
                   FontSize="32"
                   FontAttributes="Bold"
                   Style="{StaticResource TitleStyle}"
                   TextColor="#FECA18"
                   HorizontalOptions="Center" />

            <!-- Delivery timing info -->
            <Label Text="Your order should arrive in 25-40 minutes!" 
                   FontSize="26"
                   Style="{StaticResource TitleStyle}"
                   TextColor="White"
                   HorizontalTextAlignment="Center"
                   HorizontalOptions="Center" />

            <!-- Return to menu button -->
            <Button Text="Go Back to Menu"
                    BackgroundColor="#7ECB37"
                    TextColor="White"
                    FontSize="18"
                    HorizontalOptions="Center"
                    Clicked="OnGoBackClicked" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>
