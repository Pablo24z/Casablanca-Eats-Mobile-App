<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:assignment_2425"
             x:Class="assignment_2425.MainPage"
             x:Name="ThisPage">

    <AbsoluteLayout>

        <!-- Sticky Navbar absolutely positioned at top -->
        <local:StickyNavBar 
            AbsoluteLayout.LayoutBounds="0,0,1,70"
            AbsoluteLayout.LayoutFlags="WidthProportional"
            ZIndex="999" />

        <!-- Main content below navbar -->
        <ScrollView AbsoluteLayout.LayoutBounds="0,70,1,1" 
                    AbsoluteLayout.LayoutFlags="All">

            <VerticalStackLayout Spacing="0">
                <!-- Hero Section -->
                <Grid x:Name="HeroSection" HeightRequest="710">
                    <!-- Background Image -->
                    <Image x:Name="SlideshowImage"
                           Aspect="AspectFill"
                           Opacity="1" />

                    <BoxView BackgroundColor="#99000000"
                             InputTransparent="True" />

                    <VerticalStackLayout x:Name="HeroContent"
                                         Padding="20"
                                         VerticalOptions="Center"
                                         HorizontalOptions="Center"
                                         Spacing="10">

                        <Image x:Name="HeroLogo"
                               Aspect="AspectFit"
                               HeightRequest="430"
                               Opacity="0" />

                        <Label x:Name="WelcomeLabel"
                               Style="{StaticResource TitleStyle}"
                               HorizontalTextAlignment="Center">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Welcome To "
                                          TextColor="#7ECB37"
                                          Style="{StaticResource TitleSpanStyle}" />
                                    <Span Text="Casablanca!"
                                          TextColor="#FECA18"
                                          Style="{StaticResource TitleSpanStyle}" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <Label Text="At Casablanca, we serve more than just food — We serve culture. Step inside for a taste of the islands..."
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#FFFFFF"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"/>

                        <Image Source="dividers/wavesopacitybottom.svg"
                               Aspect="AspectFill"
                               HeightRequest="100"
                               Rotation="180"
                               WidthRequest="1280"
                               HorizontalOptions="FillAndExpand"
                               VerticalOptions="End"
                               Margin="0,0,0,-65"
                               ZIndex="3" />
                    </VerticalStackLayout>
                </Grid>

                <!-- Feature Section -->
                <VerticalStackLayout BackgroundColor="#131313"
                                     Padding="20"
                                     Spacing="24">

                    <Frame BackgroundColor="#FECA18" CornerRadius="12" Padding="16">
                        <Label Text="Family-Owned. Tradition-Driven. Enjoy generation-old recipes passed down with love from Hackney"
                               TextColor="#131313"
                               FontSize="16"
                               HorizontalTextAlignment="Center"/>
                    </Frame>

                    <!-- Benefits Section -->
                    <StackLayout Spacing="12">
                        <Label Text="Why Casablanca?"
                               FontFamily="PalanquinDarkMedium"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="#FA452D"/>
                        <Label Text="• Community Spirit: A vibrant, friendly vibe that feels like home."
                               TextColor="#FFFFFF" FontSize="16"/>
                        <Label Text="• Family-Run: Our values are in every dish."
                               TextColor="#FFFFFF" FontSize="16"/>
                        <Label Text="• Affordable Quality: High-quality food at reasonable prices."
                               TextColor="#FFFFFF" FontSize="16"/>
                        <Label Text="• Trusted by Hackney locals for years."
                               TextColor="#FFFFFF" FontSize="16"/>
                    </StackLayout>

                    <!-- Popular Dishes Section -->
                    <StackLayout>
                        <Label Text="Popular Dishes"
                               FontSize="22"
                               FontFamily="PalanquinDarkMedium"
                               FontAttributes="Bold"
                               TextColor="#7ECB37"
                               Padding="10"/>
                        <Frame BackgroundColor="#f7f7f7" CornerRadius="10" Padding="10" Margin="1">
                            <Label Text="Jerk Chicken - Marinated in traditional Caribbean spices, grilled to perfection"
                                   TextColor="#131313" FontSize="16"/>
                        </Frame>
                        <Frame BackgroundColor="#F7F7F7" CornerRadius="10" Padding="10" Margin="1">
                            <Label Text="Curry Goat - Tender, slow-cooked goat in a rich, aromatic curry sauce."
                                   TextColor="#131313" FontSize="16" />
                        </Frame>
                        <Frame BackgroundColor="#F7F7F7" CornerRadius="10" Padding="10" Margin="1">
                            <Label Text="Fried Plantains - Golden, sweet, and crisp—perfect as a side or snack."
                                   TextColor="#131313" FontSize="16" />
                        </Frame>
                    </StackLayout>

                    <!-- CTA Section -->
                    <Frame BackgroundColor="#FA452D" CornerRadius="10" Padding="20">
                        <Label Text="Enjoy 10% off your first dine-in experience! Order online or visit us today."
                               TextColor="White"
                               FontSize="18"
                               HorizontalTextAlignment="Center" />
                    </Frame>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>

    </AbsoluteLayout>
</ContentPage>
