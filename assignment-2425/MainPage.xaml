<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:assignment_2425"
             x:Class="assignment_2425.MainPage">
    <Grid RowDefinitions="Auto,*">
        <!-- Sticky Navbar -->
        <local:StickyNavBar />


        <!-- Scrollable Page -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout
                    Spacing="0">

                <!-- Hero Section -->
                <Grid HeightRequest="710" x:Name="HeroSection">
                    <!-- background img -->
                    <Image x:Name="SlideshowImage"
                            Aspect="AspectFill"
                            Opacity="1"
                            />
                    <BoxView BackgroundColor="#AA000000"
                                 InputTransparent="True" />

                    <VerticalStackLayout Padding="20"
                                             VerticalOptions="Center"
                                             HorizontalOptions="Center"
                                             Spacing="10">
                        <Image Source="casalogosimple_light.png"
                                Aspect="AspectFill"
                                HeightRequest="350"/>

                        <Label Style="{StaticResource TitleStyle}"
                                HorizontalTextAlignment="Center">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Welcome To " TextColor="#7ECB37" Style ="{StaticResource TitleSpanStyle}" />
                                    <Span Text="Casablanca!"
                                                  TextColor="#FECA18" Style="{StaticResource TitleSpanStyle}"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <Label Text="At Casablanca, we serve more than just food—we serve culture. Step inside for a taste of the islands with our signature jerk chicken, spicy curry goat, and much more."
                               FontSize="15"
                               FontAttributes="Bold"
                               TextColor="#FFFFFF"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"/>

                    </VerticalStackLayout>
                </Grid>
                <!-- feature section -->
                <VerticalStackLayout BackgroundColor="#131313"
                                         Padding="20"
                                         Spacing="24">
                    <Frame BackgroundColor="#FECA18" CornerRadius="12" Padding="16">
                        <Label Text="Family-Owned. Tradition-Driven. Enjoy generation-old recipes passed down with love
                                      from Hackney"
                                      TextColor="#131313"
                                      FontSize="14"
                                      HorizontalTextAlignment="Center"/>
                    </Frame>

                    <!-- Benefits section -->
                    <StackLayout Spacing="12">
                        <Label Text="Why Casablanca?"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#FA452D"/>
                        <Label Text="• Community Spirit: A vibrant, friendly vibe that feels like home.\n• Family-Run: Our values are in every dish.\n• Affordable Quality: High-quality food at reasonable prices.\n• Trusted by Hackney locals for years."
                               TextColor="#FFFFFF"
                               FontSize="14"/>
                    </StackLayout>

                    <!-- popular dishes section -->
                    <StackLayout>
                        <Label Text="Popular Dishes"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#7ECB37"/>
                        <Frame BackgroundColor="#f7f7f7" CornerRadius="10" Padding="10">
                            <Label Text="Jerk Chicken - Marinated in traditional Caribbean spices, grilled to perfection"
                                    TextColor="#131313"
                                    FontSize="14"/>
                        </Frame>
                        <Frame BackgroundColor="#F7F7F7" CornerRadius="10" Padding="10">
                            <Label Text="Curry Goat - Tender, slow-cooked goat in a rich, aromatic curry sauce."
                               TextColor="#131313"
                               FontSize="14" />
                        </Frame>
                        <Frame BackgroundColor="#F7F7F7" CornerRadius="10" Padding="10">
                            <Label Text="Fried Plantains - Golden, sweet, and crisp—perfect as a side or snack."
                               TextColor="#131313"
                               FontSize="14" />
                        </Frame>
                    </StackLayout>
                    <!-- CTA Section -->
                    <Frame BackgroundColor="#FA452D" CornerRadius="10" Padding="20">
                        <Label Text="Enjoy 10% off your first dine-in experience! Order online or visit us today."
                           TextColor="White"
                           FontSize="16"
                           HorizontalTextAlignment="Center" />
                    </Frame>
                </VerticalStackLayout>

                <!-- Footer -->
                <VerticalStackLayout Background="#FFFFFF"
                                     Padding="20"
                                     Spacing="10">
                    <Label Text="Contact Us"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#131313"
                           HorizontalTextAlignment="Center"/>
                    <Label Text="Address: 123 Hackney Road London, UK"
                           FontSize="16"
                           TextColor="#131313"
                           HorizontalTextAlignment="Center" />
                </VerticalStackLayout>


            </VerticalStackLayout>
        </ScrollView>
    </Grid>


</ContentPage>