<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="assignment_2425.MainPage"
             BackgroundColor="#FFFFFF"
             Title="Casablanca Eats">

    <ScrollView>
        <VerticalStackLayout
            Padding="20"
            Spacing="24">
            
            <!-- Hero Section -->

            <Image Source="casalogosimple_light.png"
                   Aspect="AspectFit"
                   HeightRequest="200"
                   />



            <Label Text="Welcome To Casablanca"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#131313"
                   HorizontalOptions="Center"/>

            <Label Text="Bringing Authentic Caribbean Flavours to Hackney!"
                   FontSize="16"
                   TextColor="#313131"
                   HorizontalOptions="Center"/>
            
            <!-- feature section -->

            <Frame BackgroundColor="#FECA18" CornerRadius="12" Padding="16">
                <Label Text="Family-Owned. Tradition-Driven. Enjoy generation-old recipes passed down with love
                          from Hackney"
                          TextColor="#131313"
                          FontSize="14"
                          HorizontalTextAlignment="Center"/>
            </Frame>
            
            <!-- Benefits section -->
            <StackLayout Spacing="12">
                <Label Text="Why Casablanca?"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="#FA452D"/>
                <Label Text="• Community Spirit: A vibrant, friendly vibe that feels like home.\n• Family-Run: Our values are in every dish.\n• Affordable Quality: High-quality food at reasonable prices.\n• Trusted by Hackney locals for years."
                       TextColor="#222222"
                       FontSize="14"/>
            </StackLayout>
            
          

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
