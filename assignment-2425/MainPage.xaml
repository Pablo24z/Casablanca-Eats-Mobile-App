<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:assignment_2425"
             x:Class="assignment_2425.MainPage"
             x:Name="ThisPage"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto,*">

        <!-- Sticky Navbar -->
        <local:StickyNavBar />

        <!-- Scrollable Page -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="0">

                <!-- Hero Section -->
                <Grid x:Name="HeroSection" HeightRequest="{OnPlatform Android=750, iOS=750, MacCatalyst=800}">
                    <!-- Background Image -->
                    <Image x:Name="SlideshowImage"
                           Aspect="AspectFill"
                           VerticalOptions="FillAndExpand"
                           HorizontalOptions="FillAndExpand" />

                    <!-- Overlay -->
                    <BoxView BackgroundColor="#99000000"
                             InputTransparent="True"
                             VerticalOptions="FillAndExpand"
                             HorizontalOptions="FillAndExpand" />

                    <!-- Hero Content -->
                    <VerticalStackLayout x:Name="HeroContent"
                                         Padding="20"
                                         VerticalOptions="Center"
                                         HorizontalOptions="Center"
                                         Spacing="10"
                                         WidthRequest="{OnIdiom Phone=360, Tablet=600}">

                        <Image x:Name="HeroLogo"
                               Source="casalogosimple_dark.png"
                               Aspect="AspectFit"
                               HeightRequest="{OnIdiom Phone=300, Tablet=450}" />

                        <Label x:Name="WelcomeLabel"
                               Style="{StaticResource TitleStyle}"
                               HorizontalTextAlignment="Center">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Welcome To " TextColor="#7ECB37" Style="{StaticResource TitleSpanStyle}" />
                                    <Span Text="Casablanca!" TextColor="#FECA18" Style="{StaticResource TitleSpanStyle}" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <Label Text="At Casablanca, we serve more than just food—we serve culture. Step inside for a taste of the islands..."
                               FontSize="{OnIdiom Phone=14, Tablet=18}"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"
                               MaxLines="4"
                               LineBreakMode="WordWrap" />
                    </VerticalStackLayout>

                    <!-- SVG Divider -->
                    <Image Source="dividers/wavesopacitybottom.svg"
                           Aspect="AspectFill"
                           HorizontalOptions="FillAndExpand"
                           VerticalOptions="End"
                           Rotation="180"
                           HeightRequest="80"
                           Margin="0,-1,0,-1"
                           ZIndex="3" />
                </Grid>

                <!-- Feature Section -->
                <VerticalStackLayout BackgroundColor="#131313"
                                     Padding="20"
                                     Spacing="24">

                    <!-- Intro Frame -->
                    <Frame BackgroundColor="#FECA18" CornerRadius="12" Padding="16">
                        <Label Text="Family-Owned. Tradition-Driven. Enjoy generation-old recipes passed down with love from Hackney"
                               TextColor="#131313"
                               FontSize="{OnIdiom Phone=14, Tablet=18}"
                               HorizontalTextAlignment="Center" />
                    </Frame>

                    <!-- Benefits Section -->
                    <VerticalStackLayout>
                        <Label Text="Why Casablanca?"
                               FontSize="{OnIdiom Phone=20, Tablet=26}"
                               FontAttributes="Bold"
                               TextColor="#FA452D" />

                        <StackLayout>
                            <Label Text="• Community Spirit: A vibrant, friendly vibe that feels like home." TextColor="White" FontSize="{OnIdiom Phone=14, Tablet=16}" />
                            <Label Text="• Family-Run: Our values are in every dish." TextColor="White" FontSize="{OnIdiom Phone=14, Tablet=16}" />
                            <Label Text="• Affordable Quality: High-quality food at reasonable prices." TextColor="White" FontSize="{OnIdiom Phone=14, Tablet=16}" />
                            <Label Text="• Trusted by Hackney locals for years." TextColor="White" FontSize="{OnIdiom Phone=14, Tablet=16}" />
                        </StackLayout>
                    </VerticalStackLayout>

                    <!-- Popular Dishes Section -->
                    <VerticalStackLayout>
                        <Label Text="Popular Dishes"
                               FontSize="{OnIdiom Phone=20, Tablet=26}"
                               FontAttributes="Bold"
                               TextColor="#7ECB37" />

                        <Frame BackgroundColor="#F7F7F7" CornerRadius="10" Padding="10">
                            <Label Text="Jerk Chicken - Marinated in traditional Caribbean spices, grilled to perfection"
                                   TextColor="#131313"
                                   FontSize="14" />
                        </Frame>

                        <Frame BackgroundColor="#F7F7F7" CornerRadius="10" Padding="10">
                            <Label Text="Curry Goat - Tender, slow-cooked goat in a rich, aromatic curry sauce."
                                   TextColor="#131313"
                                   FontSize="14" />
                        </Frame>

                        <Frame BackgroundColor="#F7F7F7" CornerRadius="10" Padding="10">
                            <Label Text="Fried Plantains - Golden, sweet, and crisp—perfect as a side or snack."
                                   TextColor="#131313"
                                   FontSize="14" />
                        </Frame>
                    </VerticalStackLayout>

                    <!-- CTA -->
                    <Frame BackgroundColor="#FA452D" CornerRadius="10" Padding="20">
                        <Label Text="Enjoy 10% off your first dine-in experience! Order online or visit us today."
                               TextColor="White"
                               FontSize="16"
                               HorizontalTextAlignment="Center" />
                    </Frame>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
