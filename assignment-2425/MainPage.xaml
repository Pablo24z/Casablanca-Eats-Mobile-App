<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:assignment_2425"
             x:Class="assignment_2425.MainPage"
             x:Name="ThisPage">
    <Grid RowDefinitions="Auto,*">

        <!-- Sticky Navbar -->
        <local:StickyNavBar />


        <!-- Scrollable Page -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout
                    Spacing="0">

                <Grid HeightRequest="710" x:Name="HeroSection">

                    <!-- Background Image -->
                    <Image x:Name="SlideshowImage"
                           Aspect="AspectFill"
                           Opacity="1" />

                    <BoxView BackgroundColor="#99000000"
                             InputTransparent="True" />

                    <VerticalStackLayout x:Name="HeroContent"
                         Padding="20"
                         VerticalOptions="Center"
                         HorizontalOptions="Center"
                         Spacing="10">

                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="OrientationStates">
                                <VisualState x:Name="Portrait">
                                    <VisualState.StateTriggers>
                                        <OrientationStateTrigger Orientation="Portrait" />
                                    </VisualState.StateTriggers>
                                    <VisualState.Setters>
                                        <Setter TargetName="SlideshowImage" Property="HeightRequest" Value="400" />
                                        <Setter TargetName="HeroLogo" Property="HeightRequest" Value="350" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Landscape">
                                    <VisualState.StateTriggers>
                                        <OrientationStateTrigger Orientation="Landscape" />
                                    </VisualState.StateTriggers>
                                    <VisualState.Setters>
                                        <Setter TargetName="SlideshowImage" Property="HeightRequest" Value="440" />
                                        <Setter TargetName="HeroLogo" Property="HeightRequest" Value="200" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>


                        <Image x:Name="HeroLogo"
                               Source="casalogosimple_dark.png"
                               Aspect="AspectFit"
                               HeightRequest="430"/>

                        <Label x:Name="WelcomeLabel"
                               Style="{StaticResource TitleStyle}"
                               HorizontalTextAlignment="Center">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Welcome To " TextColor="#7ECB37" Style="{StaticResource TitleSpanStyle}" />
                                    <Span Text="Casablanca!" TextColor="#FECA18" Style="{StaticResource TitleSpanStyle}" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <Label Text="At Casablanca, we serve more than just food—we serve culture. Step inside for a taste of the islands..."
                               FontSize="15"
                               FontAttributes="Bold"
                               TextColor="#FFFFFF"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"/>

                        <Image Source="dividers/wavesopacitybottom.svg"
                               Aspect="AspectFill"
                               HeightRequest="100"
                               Rotation="180"
                               WidthRequest="1000"
                               HorizontalOptions="FillAndExpand"
                               VerticalOptions="End"
                               Margin="0,0,0,-67"
                               ZIndex="3" />
                    </VerticalStackLayout>
                </Grid>

                <!-- feature section -->
                <VerticalStackLayout BackgroundColor="#131313"
                                         Padding="20"
                                         Spacing="24">
                    <Frame BackgroundColor="#FECA18" CornerRadius="12" Padding="16">
                        <Label Text="Family-Owned. Tradition-Driven. Enjoy generation-old recipes passed down with love
                                      from Hackney"
                                      TextColor="#131313"
                                      FontSize="14"
                                      HorizontalTextAlignment="Center"/>
                    </Frame>

                    <!-- Benefits section -->
                    <StackLayout Spacing="12">
                        <Label Text="Why Casablanca?"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#FA452D"/>
                        <Label Text="• Community Spirit: A vibrant, friendly vibe that feels like home.\n• Family-Run: Our values are in every dish.\n• Affordable Quality: High-quality food at reasonable prices.\n• Trusted by Hackney locals for years."
                               TextColor="#FFFFFF"
                               FontSize="14"/>
                    </StackLayout>

                    <!-- popular dishes section -->
                    <StackLayout>
                        <Label Text="Popular Dishes"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#7ECB37"/>
                        <Frame BackgroundColor="#f7f7f7" CornerRadius="10" Padding="10">
                            <Label Text="Jerk Chicken - Marinated in traditional Caribbean spices, grilled to perfection"
                                    TextColor="#131313"
                                    FontSize="14"/>
                        </Frame>
                        <Frame BackgroundColor="#F7F7F7" CornerRadius="10" Padding="10">
                            <Label Text="Curry Goat - Tender, slow-cooked goat in a rich, aromatic curry sauce."
                               TextColor="#131313"
                               FontSize="14" />
                        </Frame>
                        <Frame BackgroundColor="#F7F7F7" CornerRadius="10" Padding="10">
                            <Label Text="Fried Plantains - Golden, sweet, and crisp—perfect as a side or snack."
                               TextColor="#131313"
                               FontSize="14" />
                        </Frame>
                    </StackLayout>
                    <!-- CTA Section -->
                    <Frame BackgroundColor="#FA452D" CornerRadius="10" Padding="20">
                        <Label Text="Enjoy 10% off your first dine-in experience! Order online or visit us today."
                           TextColor="White"
                           FontSize="16"
                           HorizontalTextAlignment="Center" />
                    </Frame>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>


</ContentPage>