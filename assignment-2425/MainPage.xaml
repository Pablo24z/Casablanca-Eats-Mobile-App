<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:assignment_2425"
             x:Class="assignment_2425.MainPage">
    
    
    <Grid RowDefinitions="Auto,*">
        <!-- Sticky Navbar -->
        <local:StickyNavBar />


        <!--Main Page Content-->
        <ScrollView Grid.Row="1">
                <VerticalStackLayout
                    Padding="20"
                    Spacing="24">
            
                    <!-- Hero Section -->

                    <Label Text="Welcome To Casablanca"
                           Style="{StaticResource TitleStyle}"
                           HorizontalOptions="Center"/>

                    <Label Text="Bringing Authentic Caribbean Flavours to Hackney!"
                           FontSize="16"
                           TextColor="#313131"
                           HorizontalOptions="Center"/>
            
                    <!-- feature section -->

                    <Frame BackgroundColor="#FECA18" CornerRadius="12" Padding="16">
                        <Label Text="Family-Owned. Tradition-Driven. Enjoy generation-old recipes passed down with love
                                  from Hackney"
                                  TextColor="#131313"
                                  FontSize="14"
                                  HorizontalTextAlignment="Center"/>
                    </Frame>
            
                    <!-- Benefits section -->
                    <StackLayout Spacing="12">
                        <Label Text="Why Casablanca?"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#FA452D"/>
                        <Label Text="• Community Spirit: A vibrant, friendly vibe that feels like home.\n• Family-Run: Our values are in every dish.\n• Affordable Quality: High-quality food at reasonable prices.\n• Trusted by Hackney locals for years."
                               TextColor="#222222"
                               FontSize="14"/>
                    </StackLayout>
            
                    <!-- popular dishes section -->
                    <StackLayout>
                        <Label Text="Popular Dishes"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#7ECB37"/>
                        <Frame BackgroundColor="#f7f7f7" CornerRadius="10" Padding="10">
                            <Label Text="Jerk Chicken - Marinated in traditional Caribbean spices, grilled to perfection"
                                    TextColor="#131313"
                                    FontSize="14"/>
                        </Frame>
                        <Frame BackgroundColor="#F7F7F7" CornerRadius="10" Padding="10">
                        <Label Text="Curry Goat - Tender, slow-cooked goat in a rich, aromatic curry sauce."
                               TextColor="#131313"
                               FontSize="14" />
                    </Frame>
                    <Frame BackgroundColor="#F7F7F7" CornerRadius="10" Padding="10">
                        <Label Text="Fried Plantains - Golden, sweet, and crisp—perfect as a side or snack."
                               TextColor="#131313"
                               FontSize="14" />
                    </Frame>
                </StackLayout>
                <!-- CTA Section -->
                <Frame BackgroundColor="#FA452D" CornerRadius="10" Padding="20">
                    <Label Text="Enjoy 10% off your first dine-in experience! Order online or visit us today."
                           TextColor="White"
                           FontSize="16"
                           HorizontalTextAlignment="Center" />
                </Frame>

          
            </VerticalStackLayout>
        </ScrollView>
    </Grid>


</ContentPage>
