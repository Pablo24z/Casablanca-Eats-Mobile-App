<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:assignment_2425"
             x:Class="assignment_2425.MenuPage"
             BackgroundColor="#131313">

    <Grid RowDefinitions="Auto,*">

        <!-- Sticky Nav -->
        <local:StickyNavBar />
        
        <!-- Header -->
        <Label Grid.Row="1"
               Text="Menu"
               Style="{StaticResource TitleStyle}"
               HorizontalOptions="Center"
               Margin="0,20,0,10"
               />
        <!-- Menu Carousel -->
        <CarouselView Grid.Row="2"
                      x:Name="MenuCarousel"
                      ItemsSource="{Binding MenuImages}"
                      IndicatorView="MenuIndicators"
                      Loop="True">
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Image Source="{Binding}"
                               Aspect="AspectFit">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnImageTapped" />
                            </Image.GestureRecognizers>
                        </Image>
                    </Grid>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>
        
        <!-- Dots for menu carousel -->
        <IndicatorView Grid.Row="3"
                       x:Name="MenuIndicators"
                       IndicatorColor="#FFFFFF"
                       SelectedIndicatorColor="#FECA18"
                       HorizontalOptions="Center"
                       Margin="0,10" />


    </Grid>
</ContentPage>
